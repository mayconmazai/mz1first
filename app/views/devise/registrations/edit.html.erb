<h2>Editar Ususário</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :nova_senha %> <i>(Deixe em branco, caso não queira alterar.)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />

    <% end %>
  </div>

  <div class="field">
    <%= f.label :confirmação_de_nova_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :senha_atual %> <i>(Precisamos de sua senha atual, para efetuar as alterações.)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <br>
    <%= f.submit "Atualizar", class: "btn btn-secondary" %>
  </div>
<% end %>
<br>
<h3>Cancelar minha conta</h3>

<p>Quer mesmo cancelar sua conta? <%= button_to "Quero cancelar", registration_path(resource_name), data: { confirm: "Tem certeza disso?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Voltar", :back, class: "btn btn-secondary" %>
