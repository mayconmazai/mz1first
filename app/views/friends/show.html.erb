

<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.linkedin %>
    <div>
      <%= link_to "Editar", edit_friend_path(@friend), class:"btn btn-secondary" %>
